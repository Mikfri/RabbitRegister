@page
@model RabbitRegister.Pages.Main.Breeder.CreateBreederModel
@{
}
<link rel="stylesheet" href="/css/responsiveForm.css" />

<div class="create-container">
    <br><br><br>

    <h1 style="text-align:center">Opret Ny Avler</h1>
    <form method="post">
        <input type="button" value="Tilbage" onclick="history.go(-1)">
        <div class="from-group">
            <label asp-for="@Model.Breeder.BreederRegNo" class="control-label"></label>
            <input asp-for="@Model.Breeder.BreederRegNo" class="form-control" />
            <span asp-validation-for="@Model.Breeder.BreederRegNo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Breeder.Name" class="control-label"></label>
            <input asp-for="@Model.Breeder.Name" class="form-control" />
            <span asp-validation-for="@Model.Breeder.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Breeder.Adress" class="control-label"></label>
            <input asp-for="@Model.Breeder.Adress" class="form-control" />
            <span asp-validation-for="@Model.Breeder.Adress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Breeder.ZipCode" class="control-label"></label>
            <input asp-for="@Model.Breeder.ZipCode" class="form-control" />
            <span asp-validation-for="@Model.Breeder.ZipCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Breeder.Email" class="control-label"></label>
            <input asp-for="@Model.Breeder.Email" class="form-control" />
            <span asp-validation-for="@Model.Breeder.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Breeder.Phone" class="control-label"></label>
            <input asp-for="@Model.Breeder.Phone" class="form-control" />
            <span asp-validation-for="@Model.Breeder.Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Breeder.Password" class="control-label"></label>
            <input asp-for="@Model.Breeder.Password" class="form-control" />
            <span asp-validation-for="@Model.Breeder.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Breeder.isAdmin" class="control-label"></label>
            <div class="form-check">
                <input asp-for="Breeder.isAdmin" class="form-check-input" />
                <label class="form-check-label" for="Breeder_isAdmin">Is Admin</label>
            </div>
            <span asp-validation-for="Breeder.isAdmin" class="text-danger"></span>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" role="alert">
                <ul>
                    @foreach (var key in ViewData.ModelState.Keys)
                    {
                        foreach (var error in ViewData.ModelState[key].Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        <div class="form-group">
            <input type="submit" style="background-color:green;color:white;margin-left:auto;margin-right:auto;display:block;width:100%;border-radius:8px" value="Create" class="btn text-center" />
            <br />
        </div>
    </form>
</div>
