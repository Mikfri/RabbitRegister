@page
@model RabbitRegister.Pages.Main.Rabbit.GetAllRabbitsModel
@{
}

<h1>Rabbits</h1>

<p>
    <a class="btn btn-primary" asp-page="CreateRabbit"> Create new Rabbit </a>
</p>


<h1 class="font-monospace text-center">My Rabbits</h1>

<body>
    <div>
        <div style="width: 100%" class="d-flex flex-wrap flex-row justify-content-center">
            @if (@Model.Rabbits != null)
            {
                foreach (var Rabbit in Model.Rabbits)
                {
                    <a class="click-card flex-item" asp-page="/Main/Rabbit/RabbitProfile" asp-route-id="@Rabbit.RabbitRegNo">
                        <div class="p-2-card text-center container rounded border border-dark" style="width: 100%;">
                            @if (Rabbit.ImageString == "/Images/Products/Yarn/" || Rabbit.ImageString == null)
                            {
                                <img class="card-image" src="\Images\MissingImg.jpg">
                            }
                            else
                            {
                                <img class="card-image" src="@Rabbit.ImageString">
                            }
                            <p class="text-card font-monospace"> Owner: @Rabbit.Owner </p>
                            <p class="text-card font-monospace"> RabbitRegNo: @Rabbit.RabbitRegNo </p>
                            <p class="text-card font-monospace"> BreederRegNo: @Rabbit.BreederRegNo </p>
                            <p class="text-card font-monospace"> Name: @Rabbit.Name</p>
                            <div class="d-flex flex-wrap justify-content-center" style="margin-bottom: 5px; margin-top: 0px;">
                                <a class="btn-card btn-primary btn-sm" type="button" title="Edit" asp-page="/Main/Rabbit/EditRabbit" asp-route-id="@Rabbit.RabbitRegNo"><i class="fa fa-edit"></i></a>
                                <a class="btn-card btn-danger btn-sm" type="button" title="Delete" asp-page="/Main/Rabbit/DeleteRabbit" asp-route-id="@Rabbit.RabbitRegNo"><i class="fa fa-trash"></i></a>
                            </div>
                        </div>
                    </a>
                }
            }

        </div>
    </div>

    <br />
    <br />

</body>