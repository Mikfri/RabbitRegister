@page
@model RabbitRegister.Pages.Main.Rabbit.RabbitProfileModel
@{
}

<style>
    .rabbit-profile {
        display: flex;
        flex-direction: row;
    }

    .rabbit-profile-left {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 10px;
        border-radius: 10px;
        margin-right: 5px;
        flex: 1;
    }

  /*  .rabbit-profile-left img {
        border-radius: 50%;
        width: 250px;
        height: 250px;
        margin-bottom: 2px;
    }*/

    .rabbit-profile-left h4 {
        text-align: center;
    }

    .rabbit-profile-left a {
        display: inline-block;
        margin-right: 10px;
    }

        .rabbit-profile-left > div:last-child {
            display: flex;
            justify-content: center;
        }

    .rabbit-profile-right {
        flex: 2;
        background-color: rgba(255, 255, 255, 0.5);
        border-radius: 10px;
        padding: 10px;
    }

</style>

<h2>Rabbit Profile:</h2>

<div class="rabbit-profile row">
    <div class="@*col-sm-4*@ rabbit-profile-left">
        <div style="display:flex; flex-direction:column; align-items:center;">
            <img src="@Model.Rabbit?.ImageString" />

            <h4>RabbitRegNo: @Model.Rabbit?.RabbitRegNo || BreederRegNo: @Model.Rabbit?.BreederRegNo</h4>
        </div>
        <div>
            <p>
                <button class="btn-primary" value="Klip Kanin" onclick="window.location.href='/Main/Trimming/CreateTrimming?id=@Model.Rabbit.RabbitRegNo'" > Klip Kanin </button>
                <button class="btn-primary" value="Klippe Historik" onclick="window.location.href='/Main/Trimming/GetAllTrimming'"> Klippe Historik</button>
            </p>
        </div>
    </div>

    <div class="col-sm-8 rabbit-profile-right">
        <table class="table table-striped">
            <tr>
                <th>Navn:</th>
                <td>@Model.Rabbit?.Name</td>
            </tr>
            <tr>
                <th>Race:</th>
                <td>@Model.Rabbit?.Race</td>
            </tr>
            <tr>
                <th>Farve:</th>
                <td>@Model.Rabbit?.Color</td>
            </tr>
            <tr>
                <th>Køn:</th>
                <td>@Model.Rabbit?.Sex</td>
            </tr>
            <tr>
                <th>Født:</th>
                <td>@Model.Rabbit?.DateOfBirth</td>
            </tr>
            <tr>
                <th>Vægt:</th>
                <td>@Model.Rabbit?.Weight</td>
            </tr>
            <tr>
                <th>Præmiepoint:</th>
                <td>@Model.Rabbit?.Rating</td>
            </tr>
            <tr>
                <th>Ave-kanin:</th>
                <td>@Model.Rabbit?.DeadOrAlive</td>
            </tr>
            <tr>
                <th>Til salg?:</th>
                <td>@Model.Rabbit?.IsForSale</td>
            </tr>
            <tr>
                <th>Egnet til avl?:</th>
                <td>@Model.Rabbit?.SuitableForBreeding</td>
            </tr>
            <tr>
                <th>Døds-årsag:</th>
                <td>@Model.Rabbit?.CauseOfDeath</td>
            </tr>
        </table>
    </div>
</div>