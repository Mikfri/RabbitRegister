@page "{rabbitRegNo:int}/{originRegNo:int}"
@model RabbitRegister.Pages.Main.Rabbit.EditRabbitModel
@{
}

<!-- LIDT OM "{rabbitRegNo:int/{originRegNo}}"
    Du fortæller Razor-sidemodellen hvordan dens URL-adresse skal se ud.
    Den tager kort sagt kun dens værdi. ID1 og ID2.. Uden nogen tekst foran som beskriver hvad nøglen er.
    URL'en kommer derfor til at stå som noget ala: /EditRabbit/1/5095, hvor 1 er {rabbitRegNo}, og 5095 er {originRegNo}..
    Kaninens sekundære composite ID -->

<link rel="stylesheet" href="/css/rabbitSite.css" />

<br><br><br>

<div class="create-form">

    <form method="post" asp-page="EditRabbit" asp-page-handler="OnPostAsync">
        <div class="form-group">
            <label asp-for="Rabbit.Owner" class="control-label"></label>
            <input asp-for="Rabbit.Owner" class="form-control" readonly="@true" />
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.RabbitRegNo" class="control-label"></label>
            <input asp-for="Rabbit.RabbitRegNo" class="form-control" readonly="@true" />
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.OriginRegNo" class="control-label"></label>
            <input asp-for="Rabbit.OriginRegNo" class="form-control" readonly="@true" />
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.Name" class="control-label"></label>
            <input asp-for="Rabbit.Name" class="form-control" />
            <span asp-validation-for="Rabbit.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.Race" class="control-label"></label>
            <input asp-for="Rabbit.Race" class="form-control" />
            <span asp-validation-for="Rabbit.Race" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.Color" class="control-label"></label>
            <input asp-for="Rabbit.Color" class="form-control" />
            <span asp-validation-for="Rabbit.Color" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.Sex" class="control-label"></label>
            <input asp-for="Rabbit.Sex" class="form-control" />
            <span asp-validation-for="Rabbit.Sex" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.DateOfBirth" class="control-label"></label>
            <input asp-for="Rabbit.DateOfBirth" class="form-control" />
            <span asp-validation-for="Rabbit.DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.Weight" class="control-label"></label>
            <input asp-for="Rabbit.Weight" class="form-control" />
            <span asp-validation-for="Rabbit.Weight" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rabbit.Rating" class="control-label"></label>
            <input asp-for="Rabbit.Rating" class="form-control" />
            <span asp-validation-for="Rabbit.Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.DeadOrAlive" class="control-label"></label>
            <input asp-for="Rabbit.DeadOrAlive" value="Levende" class="form-control" />
            <span asp-validation-for="Rabbit.DeadOrAlive" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.IsForSale" class="control-label"></label>
            <input asp-for="Rabbit.IsForSale" value="Nej" class="form-control" />
            <span asp-validation-for="Rabbit.IsForSale" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.SuitableForBreeding" class="control-label"></label>
            <input asp-for="Rabbit.SuitableForBreeding" class="form-control" />
            <span asp-validation-for="Rabbit.SuitableForBreeding" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.CauseOfDeath" class="control-label"></label>
            <input asp-for="Rabbit.CauseOfDeath" class="form-control" />
            <span asp-validation-for="Rabbit.CauseOfDeath" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.Comments" class="control-label"></label>
            <input asp-for="Rabbit.Comments" class="form-control" />
            <span asp-validation-for="Rabbit.Comments" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rabbit.ImageString" class="control-label"></label>
            <input asp-for="Rabbit.ImageString" class="form-control" />
            <span asp-validation-for="Rabbit.ImageString" class="text-danger"></span>
        </div>

        <p>
            <div class="form-group">
                <input type="submit" value="Opdater" class="btn btn-success" />
                <a href="/Main/Rabbit/GetAllRabbits?breederRegNo=@User.Identity.Name" class="btn btn-warning text-white">Fortryd </a>
            </div>
        </p>
    </form>
</div>

