@page
@using RabbitRegister.Pages.Main.LogIn
@model RabbitRegister.Pages.Main.Rabbit.CreateRabbitModel
@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GetAllRabbits</title>
    <link rel="stylesheet" href="/css/rabbitSite.css" />
</head>

<br />
<form>
    <input type="button" value="Tilbage" onclick="history.go(-1)">
</form>
<br />

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.Rabbit.Owner" class="control-label"></label>
        <input asp-for="@Model.Rabbit.Owner" value="@User.Identity.Name" class="form-control" readonly="@true" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.RabbitRegNo" class="control-label"></label>
        <input asp-for="@Model.Rabbit.RabbitRegNo" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.RabbitRegNo" class="text-danger"></span>
        <span class="text-danger" style="@(@Model.exceptionFound ? "display:block" : "display:none")"> @(Model.exceptionText)</span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.BreederRegNo" class="control-label"></label>
        <input asp-for="@Model.Rabbit.BreederRegNo" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.BreederRegNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.Name" class="control-label"></label>
        <input asp-for="@Model.Rabbit.Name" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.Race" class="control-label"></label>
        <input asp-for="@Model.Rabbit.Race" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.Race" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.Color" class="control-label"></label>
        <input asp-for="@Model.Rabbit.Color" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.Color" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.Sex" class="control-label"></label>
        <input asp-for="@Model.Rabbit.Sex" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.Sex" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.DateOfBirth" class="control-label"></label>
        <input asp-for="@Model.Rabbit.DateOfBirth" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.Weight" class="control-label"></label>
        <input asp-for="@Model.Rabbit.Weight" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.Rating" class="control-label"></label>
        <input asp-for="@Model.Rabbit.Rating" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.DeadOrAlive" class="control-label"></label>
        <input asp-for="@Model.Rabbit.DeadOrAlive" value="Levende" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.DeadOrAlive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.IsForSale" class="control-label"></label>
        <input asp-for="@Model.Rabbit.IsForSale" value="Nej" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.IsForSale" class="text-danger"></span>
    </div>

        <div class="form-group">
    <label asp-for="@Model.Rabbit.SuitableForBreeding" class="control-label"></label>
    <input asp-for="@Model.Rabbit.SuitableForBreeding" class="form-control" />
    <span asp-validation-for="@Model.Rabbit.SuitableForBreeding" class="text-danger"></span>
    </div>

    <div class="form-group">
    <label asp-for="@Model.Rabbit.CauseOfDeath" class="control-label"></label>
    <input asp-for="@Model.Rabbit.CauseOfDeath" class="form-control" />
    <span asp-validation-for="@Model.Rabbit.CauseOfDeath" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.Comments" class="control-label"></label>
        <input asp-for="@Model.Rabbit.Comments" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.Comments" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Rabbit.ImageString" class="control-label"></label>
        <input asp-for="@Model.Rabbit.ImageString" value="/Images/Rabbits/" class="form-control" />
        <span asp-validation-for="@Model.Rabbit.ImageString" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </p>
</form>

<p>
    <a asp-page="/Main/Rabbit/GetAllRabbits">Back to List</a>
</p>