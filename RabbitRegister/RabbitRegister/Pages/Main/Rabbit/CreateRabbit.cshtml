                    <div>
                        <label>
                            <input type="radio" asp-for="@Model.RabbitCreateDto.IsForSale" value="Nej" /> Nej
                        </label>
                    </div>
                    <div>
                        <label>
                            <input type="radio" asp-for="@Model.RabbitCreateDto.IsForSale" value="Ja" /> Ja
                        </label>
