<div>
    <h4>Deleting...</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Yarn.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.Yarn.ProductId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Yarn.ProductType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.Yarn.ProductType)
        </dd>
        <dt class="col-sm-2">
